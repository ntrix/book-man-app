extends ../common
block header
  h1.col Transactions
  div.col
    h3 Add new transactions &nbsp;
    a.btn.btn-secondary(href='/trans') Back to transaction list
block content
  form(action='' method='post')
    label Select an user
      select.form-control(name='userId')
        optgroup(label='Select an user')
        each user in users
          option(value=user.id) #{user.username}
    label Select a book
      select.form-control(name='bookId')
        optgroup(label='Select a book')
        each book in books
          option(value=book.id) #{book.title}
      div.mt-3
        button.col.btn.btn-success(type=submit) Create transaction