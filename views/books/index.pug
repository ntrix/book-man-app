extends ../layout

block header
  h1.col Library
  div.col
    h3 Book management
    a.ml-auto.btn.btn-secondary(href='/') Back to Homepage

block control
  form(action='/books/add' method='post')
    label Title:
      input(type='text' name='title' required)
    label Description:
      input(type='text' name='description')
    button.mt-3.btn.btn-primary(type='submit') Add to library
  .divider

block content
  nav.d-flex.justify-content-center(aria-label='Page navigation')
    ul.pagination
      each page in pages
        li.page-item
          if page.val
            a.page-link(href='?page='+page.val)
              if page.label
                span= page.label
              else
                span= page.val
          else
            button.page-link.text-muted.bg-light(disabled)= page.label || '-'
  table.table.table-lg.col
    caption Book list
    tr
      th Book title
      th(colspan='4') Description
      th
      th
    each book in books
      tr
        td= book.title
        td= book.description
        td
          a.btn.btn-sm.btn-warning(href='/books/upd/' + book.id) Edit
        td
          a.btn.btn-sm.btn-danger(href='/books/del/' + book.id) Delete
